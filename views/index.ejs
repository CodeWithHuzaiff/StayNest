<% layout('layouts/boilerplate') %>
<div class="listings-page">
    <div class="header">
      <h1 class="page-title">Available Listings</h1>

      <form method="get" action="/listings/new">
        <button class="new-btn">+ New Listing</button>
      </form>
    </div>

    <div class="listings">
      <% for(let i = 0; i < listings.length; i++) { %>
        <div class="listing-card">
          <img src="<%= listings[i].image.url %>" alt="Listing image" />

          <div class="card-content">
            <h2>
              <a href="/listings/<%= listings[i]._id %>">
                <%= listings[i].title %>
              </a>
            </h2>

            <p><%= listings[i].description %></p>

            <div class="meta">
              üìç <%= listings[i].location %>, <%= listings[i].country %>
            </div>

            <div class="price">
              ‚Çπ <%= listings[i].price.toLocaleString("en-IN") %> / night
            </div>

            <div class="actions">
              <form method="get" action="/listings/<%= listings[i]._id %>/edit">
                <button class="edit-btn">Edit</button>
              </form>

              <form method="post" action="/listings/<%= listings[i]._id %>?_method=DELETE">
                <button class="delete-btn">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>